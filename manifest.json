{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "permissions": ["downloads", "storage"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
  }
  
  